{
  "name": "wechat-robot",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "type": "module",
  "egg": {
    "declarations": true
  },
  "dependencies": {
    "assert": "^2.0.0",
    "cjs": "^0.0.11",
